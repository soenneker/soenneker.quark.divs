@page "/margin-demo"
@using Soenneker.Quark.Divs.Margin
@using Soenneker.Quark.Enums.MarginSides

<PageTitle>Margin Demo</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Quark.Divs Margin System Demo</h1>

    <div class="mb-4">
        <h2>Basic Size Examples</h2>
        
        <div class="row">
            <div class="col-md-4">
                <h4>S0 (0)</h4>
                <Div Margin="Margin.S0" Class="border p-2 bg-light">
                    No margin
                </Div>
            </div>
            <div class="col-md-4">
                <h4>S1 (0.25rem)</h4>
                <Div Margin="Margin.S1" Class="border p-2 bg-light">
                    Small margin
                </Div>
            </div>
            <div class="col-md-4">
                <h4>S3 (1rem)</h4>
                <Div Margin="Margin.S3" Class="border p-2 bg-light">
                    Medium margin
                </Div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h2>Fluent API - Directional Margins</h2>
        
        <div class="row">
            <div class="col-md-3">
                <h4>FromTop</h4>
                <Div Margin="Margin.S3.FromTop" Class="border p-2 bg-light">
                    Top margin
                </Div>
            </div>
            <div class="col-md-3">
                <h4>FromRight</h4>
                <Div Margin="Margin.S3.FromRight" Class="border p-2 bg-light">
                    Right margin
                </Div>
            </div>
            <div class="col-md-3">
                <h4>FromBottom</h4>
                <Div Margin="Margin.S3.FromBottom" Class="border p-2 bg-light">
                    Bottom margin
                </Div>
            </div>
            <div class="col-md-3">
                <h4>FromLeft</h4>
                <Div Margin="Margin.S3.FromLeft" Class="border p-2 bg-light">
                    Left margin
                </Div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h2>Fluent API - Axis Margins</h2>
        
        <div class="row">
            <div class="col-md-6">
                <h4>OnX (Horizontal)</h4>
                <Div Margin="Margin.S3.OnX" Class="border p-2 bg-light">
                    Horizontal margins
                </Div>
            </div>
            <div class="col-md-6">
                <h4>OnY (Vertical)</h4>
                <Div Margin="Margin.S3.OnY" Class="border p-2 bg-light">
                    Vertical margins
                </Div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h2>Fluent API - Auto Margins</h2>
        
        <div class="row">
            <div class="col-md-4">
                <h4>Auto</h4>
                <Div Margin="Margin.Auto" Class="border p-2 bg-light">
                    Auto margin
                </Div>
            </div>
            <div class="col-md-4">
                <h4>Auto OnX</h4>
                <Div Margin="Margin.Auto.OnX" Class="border p-2 bg-light">
                    Auto horizontal
                </Div>
            </div>
            <div class="col-md-4">
                <h4>Auto OnY</h4>
                <Div Margin="Margin.Auto.OnY" Class="border p-2 bg-light">
                    Auto vertical
                </Div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h2>Fluent API - Chaining Examples</h2>
        
        <div class="row">
            <div class="col-md-6">
                <h4>S1.FromTop.S3.FromBottom</h4>
                <Div Margin="Margin.S1.FromTop.S3.FromBottom" Class="border p-2 bg-light">
                    <code>Margin.S1.FromTop.S3.FromBottom</code><br/>
                    <small>mt-1 mb-3</small>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>S2.OnX.S4.OnY</h4>
                <Div Margin="Margin.S2.OnX.S4.OnY" Class="border p-2 bg-light">
                    <code>Margin.S2.OnX.S4.OnY</code><br/>
                    <small>mx-2 my-4</small>
                </Div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <h4>S0.FromTop.S5.FromBottom</h4>
                <Div Margin="Margin.S0.FromTop.S5.FromBottom" Class="border p-2 bg-light">
                    <code>Margin.S0.FromTop.S5.FromBottom</code><br/>
                    <small>mt-0 mb-5</small>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>Auto.FromStart.S2.FromEnd</h4>
                <Div Margin="Margin.Auto.FromStart.S2.FromEnd" Class="border p-2 bg-light">
                    <code>Margin.Auto.FromStart.S2.FromEnd</code><br/>
                    <small>ms-auto me-2</small>
                </Div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h2>Responsive Margins</h2>
        <p class="text-muted mb-4">Apply different margins based on device screen sizes for optimal responsive design.</p>
        
        <div class="row">
            <div class="col-md-6">
                <h4>OnPhone</h4>
                <p class="text-muted small">Portrait phones (&lt; 576px)</p>
                <Div Margin="Margin.S1.OnPhone" Class="border p-2 bg-light">
                    <code>Margin.S1.OnPhone</code><br/>
                    <small>m-1</small>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>OnMobile</h4>
                <p class="text-muted small">Landscape phones (≥ 576px)</p>
                <Div Margin="Margin.S3.OnMobile" Class="border p-2 bg-light">
                    <code>Margin.S3.OnMobile</code><br/>
                    <small>sm-m-3</small>
                </Div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <h4>OnTablet</h4>
                <p class="text-muted small">Tablets (≥ 768px)</p>
                <Div Margin="Margin.S2.OnTablet" Class="border p-2 bg-light">
                    <code>Margin.S2.OnTablet</code><br/>
                    <small>md-m-2</small>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>OnLaptop</h4>
                <p class="text-muted small">Laptops (≥ 992px)</p>
                <Div Margin="Margin.S4.OnLaptop" Class="border p-2 bg-light">
                    <code>Margin.S4.OnLaptop</code><br/>
                    <small>lg-m-4</small>
                </Div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <h4>OnDesktop</h4>
                <p class="text-muted small">Desktops (≥ 1200px)</p>
                <Div Margin="Margin.S3.OnDesktop" Class="border p-2 bg-light">
                    <code>Margin.S3.OnDesktop</code><br/>
                    <small>xl-m-3</small>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>OnWideScreen</h4>
                <p class="text-muted small">Larger desktops (≥ 1400px)</p>
                <Div Margin="Margin.S5.OnWideScreen" Class="border p-2 bg-light">
                    <code>Margin.S5.OnWideScreen</code><br/>
                    <small>xxl-m-5</small>
                </Div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h2>Responsive Chaining Examples</h2>
        <p class="text-muted mb-4">Chain different margin sizes for different device types to create adaptive layouts.</p>
        
        <div class="row">
            <div class="col-md-6">
                <h4>Mobile to Laptop</h4>
                <p class="text-muted small">Small margin on mobile, larger on laptop</p>
                <Div Margin="Margin.S3.OnMobile.S4.OnLaptop" Class="border p-2 bg-light">
                    <code>Margin.S3.OnMobile.S4.OnLaptop</code><br/>
                    <small>sm-m-3 lg-m-4</small>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>Progressive Scaling</h4>
                <p class="text-muted small">Increasing margins across device sizes</p>
                <Div Margin="Margin.S2.OnMobile.S3.OnTablet.S4.OnLaptop" Class="border p-2 bg-light">
                    <code>Margin.S2.OnMobile.S3.OnTablet.S4.OnLaptop</code><br/>
                    <small>sm-m-2 md-m-3 lg-m-4</small>
                </Div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <h4>Directional Responsive</h4>
                <p class="text-muted small">Different margins for different sides on different devices</p>
                <Div Margin="Margin.S3.FromTop.OnMobile.S4.FromBottom.OnLaptop" Class="border p-2 bg-light">
                    <code>Margin.S3.FromTop.OnMobile.S4.FromBottom.OnLaptop</code><br/>
                    <small>sm-mt-3 lg-mb-4</small>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>Axis Responsive</h4>
                <p class="text-muted small">Horizontal on mobile, vertical on laptop</p>
                <Div Margin="Margin.S2.OnX.OnMobile.S3.OnY.OnLaptop" Class="border p-2 bg-light">
                    <code>Margin.S2.OnX.OnMobile.S3.OnY.OnLaptop</code><br/>
                    <small>sm-mx-2 lg-my-3</small>
                </Div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <h4>Phone to Wide Screen</h4>
                <p class="text-muted small">Minimal on phone, generous on wide screens</p>
                <Div Margin="Margin.S1.OnPhone.S5.OnWideScreen" Class="border p-2 bg-light">
                    <code>Margin.S1.OnPhone.S5.OnWideScreen</code><br/>
                    <small>m-1 xxl-m-5</small>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>Laptop to Desktop</h4>
                <p class="text-muted small">Medium on laptop, large on desktop</p>
                <Div Margin="Margin.S2.OnLaptop.S4.OnDesktop" Class="border p-2 bg-light">
                    <code>Margin.S2.OnLaptop.S4.OnDesktop</code><br/>
                    <small>lg-m-2 xl-m-4</small>
                </Div>
            </div>
        </div>
    </div>

    <div class="mb-4">
        <h2>Custom CSS and String Usage</h2>
        <p class="text-muted mb-4">You can use both the fluent API and custom strings for maximum flexibility.</p>
        
        <div class="row">
            <div class="col-md-6">
                <h4>Custom CSS String</h4>
                <p class="text-muted small">Direct CSS style string</p>
                <Div Margin="@("margin-top: 2rem; margin-bottom: 1rem;")" Class="border p-2 bg-light">
                    <code>Margin="@("margin-top: 2rem; margin-bottom: 1rem;")"</code>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>Custom CSS Class</h4>
                <p class="text-muted small">Direct CSS class string</p>
                <Div Margin="@("mt-4 mb-2")" Class="border p-2 bg-light">
                    <code>Margin="@("mt-4 mb-2")"</code>
                </Div>
            </div>
        </div>
        
        <div class="row mt-3">
            <div class="col-md-6">
                <h4>Fluent API</h4>
                <p class="text-muted small">Using the fluent API</p>
                <Div Margin="Margin.S3.FromTop.S2.FromBottom" Class="border p-2 bg-light">
                    <code>Margin="Margin.S3.FromTop.S2.FromBottom"</code>
                </Div>
            </div>
            <div class="col-md-6">
                <h4>Mixed Usage</h4>
                <p class="text-muted small">Fluent API with custom CSS</p>
                <Div Margin="Margin.S2.OnMobile" Class="border p-2 bg-light" Style="margin-top: 3rem;">
                    <code>Margin="Margin.S2.OnMobile" + Style="margin-top: 3rem;"</code>
                </Div>
            </div>
        </div>
    </div>
</div>

<style>
    .border {
        border: 1px solid #dee2e6;
        border-radius: 0.25rem;
    }
    
    .bg-light {
        background-color: #f8f9fa;
    }
    
    .text-center {
        text-align: center;
    }
    
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }
    
    .row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -15px;
    }
    
    .col-md-2, .col-md-3, .col-md-4, .col-md-6 {
        padding: 0 15px;
        margin-bottom: 1rem;
    }
    
    .col-md-2 { flex: 0 0 16.666667%; max-width: 16.666667%; }
    .col-md-3 { flex: 0 0 25%; max-width: 25%; }
    .col-md-4 { flex: 0 0 33.333333%; max-width: 33.333333%; }
    .col-md-6 { flex: 0 0 50%; max-width: 50%; }
    
    .mt-4 { margin-top: 1.5rem; }
    .mb-4 { margin-bottom: 1.5rem; }
    .p-1 { padding: 0.25rem; }
    .p-2 { padding: 0.5rem; }
    
    pre {
        background-color: #f8f9fa;
        border: 1px solid #e9ecef;
        border-radius: 0.25rem;
        padding: 1rem;
        font-size: 0.875rem;
    }
    
    code {
        color: #e83e8c;
        font-size: 0.875rem;
    }
</style>
